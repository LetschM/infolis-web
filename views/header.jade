nav.navbar.navbar-inverse.navbar-static-top
	script.
		$(function(){
				var path = window.location.pathname;
				if (path !== '/')
					$('nav li a[href$="'+path+'"]').parents('li').addClass('active');
				else
					$('nav li a.home').parents('li').addClass('active');
		});
	.container
		.navbar-header
			a.navbar-brand(href='#{site_github}', style="padding-top: 5px;")
				img(src='#{site_github}/img/logo-circle.png', alt='', style="height:2.3em;display:inline")
		#navbar.navbar-collapse.collapse
			ul.nav.navbar-nav
				li
					a.home(href="#{site_github}") Home
				li
					a.dropdown-toggle(data-toggle='dropdown',role="button",aria-expanded="false",aria-haspopup="true")
						| Learn
						span.caret
					ul.dropdown-menu
						li
							a(href="#{site_github}/about-en/") About
						li
							a(href="#{site_github}/about-goals/") Goals
						li
							a(href="#{site_github}/publications/") Publications
				li.dropdown
					a.dropdown-toggle(data-toggle='dropdown',role="button",aria-expanded="false",aria-haspopup="true")
						| Work
						span.caret
					ul.dropdown-menu
						li
							a(href='#{site_api}/api') API
						li
							a(href='#{site_api}/ldf') Linked Data Fragments
